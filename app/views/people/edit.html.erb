<div class="jumbotron">
  <h3 class="display-3 text-center"><b>Welcome to Rails</b></h3>
  <p class="lead">

    <%= simple_form_for @person,  :html => {class: 'subscribe-from'}  do |form| %>
    <div class="form-group">
      <label for="formGroupExampleInput">First Name</label>
      <%= form.text_field :first_name , class: "form-control", placeholder: "First Name"%>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Last Name</label>
      <%= form.text_field :last_name , class: "form-control", placeholder: "Last Name"%>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput3">Email</label>
      <%= form.email_field :email , class: "form-control", placeholder: "Email"%>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput5">Country</label>
      <%= form.collection_select :country_id, Country.order(:name), :id, :name, include_blank: true  %>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput6">City</label>
      <%= form.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, include_blank: true %>
    </div>
    <div class="col-md-12 col-md-offset-3">
      <%= form.submit "Proceed", class: "btn btn-success btn-block" %>
    </div>
  <%end%>


  </p>
</div>

