<div class="jumbotron">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center"> Mail Sending List </h2>
    </div>
  </div>
  <p class="lead">


  <table class="table table-bordered">
      <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Country</th>
        <th>City</th>
        <th>Option</th>
      </tr>
      </thead>

      <% @person.each do |person| %>
        <tr>
          <td><%=  person.first_name %></td>
          <td><%=  person.last_name %></td>
          <td><%=  person.email %></td>
          <td><%=  person.country.name %></td>
          <td><%=  person.state.name %></td>
          <td>
            <%= link_to 'Show', person_path(person.id) %>
          </td>
        </tr>
      <% end -%>
    </table>

    <br>
    <p><%= link_to 'New', new_person_path,  class: "btn btn-success"%></p>

  </p>
</div>

